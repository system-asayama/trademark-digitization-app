{% extends "base.html" %}
{% block title %}店舗管理者管理{% endblock %}
{% block content %}
{% if tenant %}
<div style="margin-bottom:20px">
  <div style="font-size:1.2em;font-weight:bold;color:#666">{{ tenant.名称 }}</div>
  {% if store %}
  <div style="font-size:1.1em;font-weight:bold;color:#888;margin-top:4px">{{ store.名称 }}</div>
  {% endif %}
  <h1 style="margin-top:12px">店舗管理者管理</h1>
</div>
{% else %}
<h1>店舗管理者管理</h1>
{% endif %}
<style>
  .admin-table-wrapper {
    width: 100%;
    overflow-x: auto;
  }
  
  .admin-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85em;
  }
  
  .admin-table thead tr {
    background: #f5f5f5;
    border-bottom: 2px solid #ddd;
  }
  
  .admin-table th {
    padding: 8px;
    text-align: left;
    white-space: nowrap;
  }
  
  .admin-table tbody tr {
    border-bottom: 1px solid #eee;
  }
  
  .admin-table tbody tr.owner-row {
    background: #fffbf0;
  }
  
  .admin-table td {
    padding: 8px;
    white-space: nowrap;
  }
  
  .admin-table td[data-label="所属店舗: "] {
    white-space: normal;
  }
  
  .admin-table .btn.small {
    font-size: 0.9em;
    padding: 4px 8px;
  }
  
  /* スマホ用カード型レイアウト */
  @media (max-width: 768px) {
    .admin-table-wrapper {
      overflow-x: visible;
    }
    
    .admin-table thead {
      display: none;
    }
    
    .admin-table tbody {
      display: block;
    }
    
    .admin-table tbody tr {
      display: block;
      margin-bottom: 16px;
      padding: 16px;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
    }
    
    .admin-table tbody tr.owner-row {
      background: #fffbf0;
      border-color: #ffd700;
    }
    
    .admin-table td {
      display: block;
      padding: 8px 0;
      white-space: normal;
      border: none;
    }
    
    .admin-table td::before {
      content: attr(data-label);
      font-weight: 600;
      display: inline-block;
      width: 100px;
      color: #374151;
    }
    
    .admin-table td[data-label="所属店舗: "] {
      position: relative;
    }
    
    .admin-table td[data-label="所属店舗: "]::before {
      display: inline-block;
      position: absolute;
      left: 0;
    }
    
    .admin-table td[data-label="所属店舗: "] span {
      margin-left: 100px;
    }
    
    .admin-table td[data-label="所属店舗: "] span:first-child {
      display: inline !important;
    }
    
    .admin-table td[data-label="所属店舗: "] span:not(:first-child) {
      display: block;
    }
    
    .admin-table td.admin-actions {
      padding-top: 12px;
      margin-top: 8px;
      border-top: 1px solid #e5e7eb;
    }
    
    .admin-table td.admin-actions::before {
      display: none;
    }
    
    .admin-table .btn.small {
      display: inline-block;
      margin: 4px 4px 4px 0;
      font-size: 0.9em;
      padding: 8px 12px;
    }
    
    .admin-table td.admin-actions form {
      display: inline-block;
    }
  }
</style>

<div style="margin-bottom:20px">
  <a class="btn sub" href="{{ url_for('admin.dashboard') }}">ダッシュボードに戻る</a>
</div>

{% if admins and admins|length > 0 %}
<!-- PC用テーブル表示 -->
<table class="admin-table" style="width:100%;border-collapse:collapse;font-size:0.85em">
  <thead>
    <tr style="background:#f5f5f5;border-bottom:2px solid #ddd">
      <th style="padding:8px;text-align:left;white-space:nowrap">ID</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">ログインID</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">氏名</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">メールアドレス</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">所属店舗</th>
      <th style="padding:8px;text-align:center;white-space:nowrap">ステータス</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">作成日時</th>
      <th style="padding:8px;text-align:left;white-space:nowrap">操作</th>
    </tr>
  </thead>
  <tbody>
    {% for admin in admins %}
    <tr {% if admin.is_owner == 1 %}class="owner-row"{% endif %}>
      <td data-label="ID: ">{{ admin.id }}</td>
      <td data-label="ログインID: "><code>{{ admin.login_id }}</code></td>
      <td data-label="氏名: "><strong>{{ admin.name }}</strong></td>
      <td data-label="メールアドレス: ">{{ admin.email if admin.email else '-' }}</td>
      <td data-label="所属店舗: ">
        {% if admin.stores %}
          {% for store in admin.stores %}
            <span style="display:block">
              {{ store.name }}
              {% if store.is_owner %}
                <span style="color:#ff9800;font-weight:bold;margin-left:4px">★ オーナー</span>
              {% endif %}
            </span>
          {% endfor %}
        {% else %}
          <span style="color:#999">-</span>
        {% endif %}
      </td>
      <td data-label="ステータス: ">
        {% if admin.active %}
        <span style="color:green">✓ 有効</span>
        {% else %}
        <span style="color:#999">無効</span>
        {% endif %}
      </td>
      <td data-label="作成日時: ">{{ admin.created_at }}</td>
      <td class="admin-actions">
        {% if is_owner or can_manage_admins or admin.id == current_user_id %}
          <a class="btn small" href="{{ url_for('admin.admin_edit', admin_id=admin.id) }}" style="font-size:0.9em;padding:4px 8px">編集</a>
          
          {% if admin.id != current_user_id %}
            {% if admin.is_owner != 1 %}
            <form method="post" action="{{ url_for('admin.admin_transfer_owner', admin_id=admin.id) }}" style="display:inline" onsubmit="return confirm('{{ admin.name }} にオーナー権限を移譲しますか？');">
              <button class="btn small" type="submit" style="background:#ff6f00;font-size:0.9em;padding:4px 8px">オーナー移譲</button>
            </form>
            
            <form method="post" action="{{ url_for('admin.admin_delete', admin_id=admin.id) }}" style="display:inline" onsubmit="return confirm('本当に削除しますか？');">
              <button class="btn small" type="submit" style="background:#d32f2f;font-size:0.9em;padding:4px 8px">削除</button>
            </form>
            {% endif %}
          {% else %}
            <span style="color:#999">（自分）</span>
          {% endif %}
        {% else %}
          <span style="color:#999">-</span>
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div class="admin-cards">
  {% for admin in admins %}
  <div class="admin-card{% if admin.is_owner == 1 %} owner{% endif %}">
    <div class="admin-card-row">
      <span class="admin-card-label">ID:</span>
      <span class="admin-card-value">{{ admin.id }}</span>
    </div>
    <div class="admin-card-row">
      <span class="admin-card-label">ログインID:</span>
      <span class="admin-card-value"><code>{{ admin.login_id }}</code></span>
    </div>
    <div class="admin-card-row">
      <span class="admin-card-label">氏名:</span>
      <span class="admin-card-value"><strong>{{ admin.name }}</strong></span>
    </div>
    <div class="admin-card-row">
      <span class="admin-card-label">メールアドレス:</span>
      <span class="admin-card-value">{{ admin.email if admin.email else '-' }}</span>
    </div>
    <div class="admin-card-row stores-row">
      <span class="admin-card-label">所属店舗:</span>
      <span class="admin-card-value">
        {% if admin.stores %}
          {% for store in admin.stores %}
            <span style="display:block">
              {{ store.name }}
              {% if store.is_owner %}
                <span style="color:#ff9800;font-weight:bold;margin-left:4px">★ オーナー</span>
              {% endif %}
            </span>
          {% endfor %}
        {% else %}
          <span style="color:#999">-</span>
        {% endif %}
      </span>
    </div>
    <div class="admin-card-row">
      <span class="admin-card-label">ステータス:</span>
      <span class="admin-card-value">
        {% if admin.active %}
        <span style="color:green">✓ 有効</span>
        {% else %}
        <span style="color:#999">無効</span>
        {% endif %}
      </span>
    </div>
    <div class="admin-card-row">
      <span class="admin-card-label">作成日時:</span>
      <span class="admin-card-value" style="color:#666">{{ admin.created_at }}</span>
    </div>
    
    <div class="admin-card-actions">
      {% if is_owner or can_manage_admins or admin.id == current_user_id %}
        <a class="btn small" href="{{ url_for('admin.admin_edit', admin_id=admin.id) }}">編集</a>
        
        {% if admin.id != current_user_id %}
          {% if admin.is_owner != 1 %}
          <form method="post" action="{{ url_for('admin.admin_transfer_owner', admin_id=admin.id) }}" style="display:inline" onsubmit="return confirm('{{ admin.name }} にオーナー権限を移譲しますか？');">
            <button class="btn small" type="submit" style="background:#ff6f00">オーナー移譲</button>
          </form>
          
          <form method="post" action="{{ url_for('admin.admin_delete', admin_id=admin.id) }}" style="display:inline" onsubmit="return confirm('本当に削除しますか？');">
            <button class="btn small" type="submit" style="background:#d32f2f">削除</button>
          </form>
          {% endif %}
        {% else %}
          <span style="color:#999">（自分）</span>
        {% endif %}
      {% else %}
        <span style="color:#999">-</span>
      {% endif %}
    </div>
  </div>
  {% endfor %}
</div>
{% else %}
<p style="margin-top:15px">店舗管理者が登録されていません。</p>
{% endif %}

<div style="margin-top:20px">
  <a class="btn sub" href="{{ url_for('admin.dashboard') }}">ダッシュボードに戻る</a>
  <a class="btn" href="{{ url_for('auth.logout') }}">ログアウト</a>
</div>
{% endblock %}
